<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>
<metal:block fill-slot="main" tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

    <div tal:replace="structure provider:plone.abovecontenttitle" />
    <h1 id="title" class="documentFirstHeading">
        <span id="parent-fieldname-title" tal:content="context/title">title</span>
    </h1>
    <div tal:replace="structure provider:plone.belowcontenttitle" />

    <tal:batch define="batch view/get_batched_news_items">
        <tal:newsitems repeat="item batch">
        <tal:repeat define="
                first repeat/item/start;
                first python: ' first' if first else '';
                last repeat/item/end;
                last python: ' last' if last else '';"
            tal:attributes="class python:('newsItem' + first + last)">

            <a href="#"
                tal:condition="item/image|nothing"
                tal:attributes="href item/url">
                <div class="tileImage">
                    <img src="" alt=""
                        tal:define="scales item/obj/@@images;
                                    scale python:scales.scale('image', 'thumb')"
                        tal:replace="structure python:scale and scale.tag(css_class='tileImage') or None" />
                </div>
            </a>

            <h2 class="tileHeadline">
                <a tal:attributes="href item/url" tal:content="item/title">Foo</a>
            </h2>
            <p class="metadata">
                <em tal:define="date item/date" tal:content="python: toLocalizedTime(date)">2012-01-01</em>
            </p>
            <p><a tal:attributes="href item/url" tal:content="item/desc"></a></p>
        </tal:repeat>
        </tal:newsitems>
        <div metal:use-macro="context/batch_macros/macros/navigation" />
    </tal:batch>
</metal:block>
</body>
</html>
